  "songs": {
    "31": {
      "title": {
        "en": "Rejoice, the Lord is King!",
        "cn": "你当欢喜"
      },
      "music": {
        "composers": [
          "John Darwall"
        ],
        "tune": "Darwall",
        "keySignature": [
          "Db"
        ],
        "timeSignature": [
          "4/4"
        ]
      },
      "lyrics": {
        "authors": [
          "Charles Wesley"
        ],
        "en": {
          "1": [
            "Rejoice - the Lord is King!",
            "Your Lord and King adore!",
            "Rejoice, give thanks, and sing.",
            "And triumph evermore:"
          ],
          "chorus": [
            "Lift up your heart, lift up your voice!",
            "Rejoice, again I say, rejoice!"
          ]
        },
        "cn": {
          "1": [
            "欢喜救主为君！",
            "你当叩拜至尊",
            "高声感谢主恩",
            "凯歌永远欢欣；"
          ],
          "chorus": [
            "振起你心！举起你声！",
            "欢欣！欢欣！你当欢欣！"
          ]
        }
      },
      "notes": [
        "Same song: RHC217."
      ]
    }
  }
